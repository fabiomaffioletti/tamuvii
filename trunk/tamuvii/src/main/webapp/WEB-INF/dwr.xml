<!DOCTYPE dwr PUBLIC "-//GetAhead Limited//DTD Direct Web Remoting 3.0//EN" "http://getahead.org/dwr//dwr30.dtd">
<dwr>
    <allow>
        <create creator="spring" javascript="ShelfManager">
            <param name="class" value="com.tamuvii.service.ShelfManager"/>
            <param name="beanName" value="shelfManager"/>
            <include method="getShelfDirectorReport"/>
            <include method="getShelfByFilter"/>
            <include method="getShelf"/>
        </create>
        
        <create creator="spring" javascript="MovieManager">
            <param name="class" value="com.tamuvii.service.MovieManager"/>
            <param name="beanName" value="movieManager"/>
            <include method="searchSocialMovies"/>
        </create>
        
        <create creator="spring" javascript="MessageManager">
            <param name="class" value="com.tamuvii.service.MessageManager"/>
            <param name="beanName" value="messageManager"/>
            <include method="sendPersonalMessageDWR"/>
        </create>
        
        
        <create creator="spring" javascript="UserReviewVoteManager">
            <param name="class" value="com.tamuvii.service.UserReviewVoteManager"/>
            <param name="beanName" value="userReviewVoteManager"/>
            <include method="voteOkDWR"/>
            <include method="voteKoDWR"/>
        </create>
        
        <create creator="spring" javascript="UserToMovieManager">
            <param name="class" value="com.tamuvii.service.UserToMovieManager"/>
            <param name="beanName" value="userToMovieManager"/>
            <include method="addMovieToShelf"/>
        </create>
        
        <convert converter="bean" match="com.tamuvii.pojo.ShelfDirectorReport"/>
        <convert converter="bean" match="com.tamuvii.pojo.ShelfItem"/>
        <convert converter="bean" match="com.tamuvii.pojo.Shelf"/>
        <convert converter="bean" match="com.tamuvii.pojo.Search"/>
        <convert converter="bean" match="com.tamuvii.pojo.SocialMovie"/>
        <convert converter="exception" match="java.lang.Exception" /> 
        <convert converter="bean" match="java.lang.StackTraceElement"/>
        <convert converter="exception" javascript="UserReviewAlreadyVotedException" match="com.tamuvii.exception.UserReviewAlreadyVotedException"/>
        <convert converter="exception" javascript="UserReviewOwnVoteException" match="com.tamuvii.exception.UserReviewOwnVoteException"/>
        <convert converter="exception" javascript="UserToMovieAlreadyAddedToShelfException" match="com.tamuvii.exception.UserToMovieAlreadyAddedToShelfException"/>
    </allow>
</dwr>