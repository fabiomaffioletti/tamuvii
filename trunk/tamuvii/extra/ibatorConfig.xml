<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ibatorConfiguration
  PUBLIC "-//Apache Software Foundation//DTD Apache iBATIS Ibator Configuration 1.0//EN"
  "http://ibatis.apache.org/dtd/ibator-config_1_0.dtd">

<ibatorConfiguration>
  <classPathEntry location="C:/SOURCE/gosh/mysql_connector/mysql-connector-java-5.1.5-bin.jar" />

  <ibatorContext id="DB2Tables" targetRuntime="Ibatis2Java2">
  
  <!-- Se a "true" non mette il timestamp della creazione del file xml nei commenti -->
	<commentGenerator>
	  <property name="suppressDate" value="true" />
	</commentGenerator>
  
  <!-- Dati di connessione al DB  -->
	<jdbcConnection driverClass="com.mysql.jdbc.Driver"
        connectionURL="jdbc:mysql://localhost:3306/gosh"
        userId="root"
        password="password">
    </jdbcConnection>
	
	<!-- Se a "true" usa la classe BigDecimal per i campi DECIMAL e NUMERIC -->
	<javaTypeResolver>
      <property name="forceBigDecimals" value="false" />
    </javaTypeResolver>
	
	<!-- Package delle classi di modello -->
    <javaModelGenerator targetPackage="com.iba.model" targetProject="gosh">
      <property name="enableSubPackages" value="true" />
      <property name="trimStrings" value="true" />
    </javaModelGenerator>
	
	<!-- Package dei mapping xml -->
    <sqlMapGenerator targetPackage="sqlmaps"  targetProject="gosh\src\main\resources\">
      <property name="enableSubPackages" value="true" />
    </sqlMapGenerator>

	<!-- Package delle classi dei DAO-->
    <daoGenerator type="SPRING" targetPackage="com.iba.dao" implementationPackage="com.iba.dao.impl" targetProject="gosh">
      <property name="enableSubPackages" value="true" />
    </daoGenerator>

    <table tableName="movie" domainObjectName="Movie" >
      <property name="useActualColumnNames" value="false"/>
	  <columnRenamingRule searchString="_" replaceString="" />
    </table>
    
  </ibatorContext>
</ibatorConfiguration>