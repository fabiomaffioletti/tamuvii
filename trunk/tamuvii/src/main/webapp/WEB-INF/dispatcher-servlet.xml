<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd"
       default-lazy-init="true">

    <bean id="exceptionResolver" class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">
        <property name="exceptionMappings">
            <props>
                <prop key="org.springframework.dao.DataAccessException">        
                    dataAccessFailure
                </prop>
            </props>
        </property>
    </bean>

    <bean id="filenameController" class="org.springframework.web.servlet.mvc.UrlFilenameViewController"/>

    <bean id="fileUploadController" class="com.tamuvii.webapp.controller.FileUploadController">
        <property name="validator" ref="beanValidator"/>
        <property name="cancelView" value="redirect:mainMenu.html"/>
        <property name="formView" value="uploadForm"/>
        <property name="successView" value="uploadDisplay"/>
    </bean>

    <bean id="passwordHintController" class="com.tamuvii.webapp.controller.PasswordHintController">
        <property name="userManager" ref="userManager"/>
        <property name="messageSource" ref="messageSource"/>
        <property name="mailEngine" ref="mailEngine"/>
        <property name="message" ref="mailMessage"/>
    </bean>

    <bean id="reloadController" class="com.tamuvii.webapp.controller.ReloadController"/>

    <bean id="signupController" class="com.tamuvii.webapp.controller.SignupController">
        <property name="validator" ref="beanValidator"/>
        <property name="formView" value="signup"/>
        <property name="successView" value="redirect:mainMenu.html"/>
        <property name="userManager" ref="userManager"/>
        <property name="roleManager" ref="roleManager"/>
        <property name="mailEngine" ref="mailEngine"/>
        <property name="message" ref="mailMessage"/>
        <property name="templateName" value="accountCreated.vm"/>
    </bean>

    <bean id="userController" class="com.tamuvii.webapp.controller.UserController">
        <property name="userManager" ref="userManager"/>
    </bean>

    <bean id="userFormController" class="com.tamuvii.webapp.controller.UserFormController">
        <property name="validator" ref="beanValidator"/>
        <property name="formView" value="userForm"/>
        <property name="successView" value="redirect:users.html"/>
        <property name="cancelView" value="redirect:mainMenu.html"/>
        <property name="userManager" ref="userManager"/>
        <property name="roleManager" ref="roleManager"/>
        <property name="mailEngine" ref="mailEngine"/>
        <property name="message" ref="mailMessage"/>
        <property name="templateName" value="accountCreated.vm"/>
    </bean>

    <!-- Add additional controller beans here -->

    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="maxUploadSize" value="2097152"/>
    </bean>

    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basename" value="ApplicationResources"/>
        <property name="useCodeAsDefaultMessage" value="true"/>
    </bean>

    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <value>
                /admin/activeUsers.html=filenameController
                /admin/flushCache.html=filenameController
                /admin/reload.html=reloadController
                /admin/users.html=userController
                /mainMenu.html=filenameController
                /passwordHint.html=passwordHintController
                
                /shelf.html=shelfController
                /wishlist.html=wishlistController
                /shelfManagement.html=shelfManagementController
                /wishlistManagement.html=wishlistManagementController
                /socialMovie.html=socialMovieController
                /personalMovie.html=personalMovieFormController
                /personalMessages.html=messageController
                
                /directorDetail.html=directorDetailController
                /opinion.html=opinionController
                /searchSocialMovies.html=searchSocialMovieController
                
                <!-- Ricerca -->
                /search.html=filenameController
                /searchAutocomplete.html=SearchAutocompleteController
                
                <!-- Review -->
                /voteReview.html=userReviewVoteController
                /voteReview.html=userReviewVoteController
<!--                /reviewDiscussion.html=discussionFormController-->
				/reviewDiscussion.html=discussionController
                
                <!-- Messages -->
                /sendMessage.html=messageManagementController
                
                <!-- Relationship -->
                /relationship.html=relationshipController
                /relationshipManagement.html=relationshipManagementController
                
                <!-- Backend mappings -->
                /be_moviesList.html=movieListController
                
                
                <!-- Registrazione -->
                /register.html=registerWizardController
                /confirmRegistration.html=registrationConfirmationController
                
                <!-- Statistics -->
                /statistics.html=statisticsController
                
                <!-- Explore people -->
                /explorePeople.html=explorePeopleController
                
                <!-- Preferences -->
                /preferences.html=userProfileFormController
                /password.html=filenameController
                /image.html=userImageUploadController
            </value>
        </property>
        <property name="order" value="0"/>
    </bean>

    <bean class="org.springframework.web.servlet.mvc.support.ControllerClassNameHandlerMapping">
        <property name="order" value="1"/>
    </bean>

    <!-- View Resolver for JSPs -->
    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="requestContextAttribute" value="rc"/>
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <property name="prefix" value="/WEB-INF/pages/"/>
        <property name="suffix" value=".jsp"/>
    </bean>
    
    <bean id="shelfController" class="com.tamuvii.webapp.controller.ShelfController">
    	<property name="movieManager" ref="movieManager" />
    	<property name="shelfManager" ref="shelfManager" />
    	<property name="appUserManager" ref="appUserManager" />
    	<property name="relationshipManager" ref="relationshipManager" />
    	<property name="visitManager" ref="visitManager" />
    </bean>
    
    <bean id="wishlistController" class="com.tamuvii.webapp.controller.WishlistController">
    	<property name="movieManager" ref="movieManager" />
    	<property name="appUserManager" ref="appUserManager" />
    	<property name="relationshipManager" ref="relationshipManager" />
    </bean>
    
    <bean id="socialMovieController" class="com.tamuvii.webapp.controller.SocialMovieController">
    	<property name="movieManager" ref="movieManager" />
    </bean>
    
    <bean id="personalMovieFormController" class="com.tamuvii.webapp.controller.PersonalMovieFormController">
    	<property name="movieManager" ref="movieManager" />
    	<property name="formView" value="personalMovie"/>
    	<property name="successView" value="redirect:shelf.html"/>
    	<property name="cancelView" value="redirect:shelf.html"/>
    </bean>
    
    <bean id="movieListController" class="com.tamuvii.webapp.controller.MovieListController">
    	<property name="movieManager" ref="movieManager" />
    </bean>
    
    <bean id="directorDetailController" class="com.tamuvii.webapp.controller.DirectorDetailController">
    	<property name="directorManager" ref="directorManager" />
    	<property name="movieManager" ref="movieManager" />
    </bean>
    
    <bean id="discussionFormController" class="com.tamuvii.webapp.controller.DiscussionFormController">
    	<property name="discussionManager" ref="discussionManager" />
    	<property name="formView" value="reviewDiscussion"/>
    	<property name="successView" value="redirect:shelf.html"/>
    	<property name="cancelView" value="redirect:shelf.html"/>
    </bean>
    
    <bean id="opinionController" class="com.tamuvii.webapp.controller.OpinionController">
    	<property name="opinionManager" ref="opinionManager" />
    </bean>
    
    <bean id="searchSocialMovieController" class="com.tamuvii.webapp.controller.SearchSocialMovieController">
    	<property name="movieManager" ref="movieManager" />
    </bean>
    
    <bean id="shelfManagementController" class="com.tamuvii.webapp.controller.ShelfManagementController">
    	<property name="movieManager" ref="movieManager" />
    </bean>
    
    <bean id="wishlistManagementController" class="com.tamuvii.webapp.controller.WishlistManagementController">
    	<property name="movieManager" ref="movieManager" />
    </bean>
    
    <bean id="relationshipController" class="com.tamuvii.webapp.controller.RelationshipController">
    	<property name="relationshipManager" ref="relationshipManager" />
    </bean>
    
    <bean id="relationshipManagementController" class="com.tamuvii.webapp.controller.RelationshipManagementController">
    	<property name="relationshipManager" ref="relationshipManager" />
    </bean>
    
    <bean id="messageController" class="com.tamuvii.webapp.controller.MessageController">
    	<property name="messageManager" ref="messageManager" />
    </bean>
    
    <bean id="messageManagementController" class="com.tamuvii.webapp.controller.MessageManagementController">
    	<property name="messageManager" ref="messageManager" />
    </bean>
    
    <bean id="userReviewVoteController" class="com.tamuvii.webapp.controller.UserReviewVoteController">
    	<property name="userReviewVoteManager" ref="userReviewVoteManager" />
    </bean>
    
    <bean id="statisticsController" class="com.tamuvii.webapp.controller.StatisticsController">
    	<property name="appUserManager" ref="appUserManager" />
    	<property name="shelfManager" ref="shelfManager" />
    	<property name="relationshipManager" ref="relationshipManager" />
    	<property name="statisticsManager" ref="statisticsManager" />
    </bean>
    
    <bean id="explorePeopleController" class="com.tamuvii.webapp.controller.ExplorePeopleController">
    	<property name="explorePeopleManager" ref="explorePeopleManager" />
    </bean>
    
    <bean id="userProfileFormController" class="com.tamuvii.webapp.controller.UserProfileFormController">
    	<property name="appUserManager" ref="appUserManager" />
    	<property name="validator" ref="beanValidator" />
    </bean>
    
    <bean id="userImageUploadController" class="com.tamuvii.webapp.controller.UserImageUploadController">
		<property name="appUserManager" ref="appUserManager" />
    	<property name="successView" value="redirect:/image.html"/>
    	<property name="cancelView" value="redirect:/preferences.html" />
    </bean>
    
    <bean id="discussionController" class="com.tamuvii.webapp.controller.DiscussionController">
    	<property name="discussionManager" ref="discussionManager" />
    	<property name="movieManager" ref="movieManager" />
    </bean>
    
    
    
    <!-- Registration controller and validation beans -->
    <bean id="registerWizardController" class="com.tamuvii.webapp.controller.RegisterWizardController">
    	<property name="allowDirtyForward" value="false"/>
    	<property name="userManager" ref="userManager" />
    	<property name="roleManager" ref="roleManager" />
    	<property name="mailEngine" ref="mailEngine" />
    	<property name="configManager" ref="configManager" />
    	<property name="validators">
	        <list>
	            <ref bean="pageValidator0"/>
	            <ref bean="pageValidator1"/>
	        </list>
	    </property>
    	<property name="pages">
    		<list>
    			<value>register0</value>
    			<value>register1</value>
    			<value>register2</value>
    		</list>
    	</property>
    </bean>
    <bean id="pageValidator0" class="org.springmodules.validation.commons.ConfigurablePageBeanValidator" parent="pageValidator">
	    <property name="page" value="0"/>
	</bean>
	<bean id="pageValidator1" class="org.springmodules.validation.commons.ConfigurablePageBeanValidator" parent="pageValidator">
	    <property name="page" value="1"/>
	</bean>
	<bean id="pageValidator" abstract="true">
	    <property name="formName" value="user"/>
	    <property name="validatorFactory" ref="validatorFactory"/>
	</bean>
	
	<bean id="registrationConfirmationController" class="com.tamuvii.webapp.controller.RegistrationConfirmationController">
		<property name="appUserManager" ref="appUserManager" />
	</bean>
	
	<bean id="SearchAutocompleteController" class="com.tamuvii.webapp.controller.SearchAutocompleteController">
		<property name="movieManager" ref="movieManager" />
	</bean>
    
    
</beans>