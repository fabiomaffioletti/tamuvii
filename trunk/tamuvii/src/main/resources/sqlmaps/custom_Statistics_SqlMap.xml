<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="custom_statistics" >

  <resultMap id="yearReport" class="com.tamuvii.pojo.StatisticsYearReport">
        <result property="year" column="year"/>
        <result property="numMovies" column="numMovies"/>
		<result property="totMinutes" column="totMinutes"/>
   </resultMap>
   
   <select id="getYearReport" resultMap="yearReport" parameterClass="java.lang.String">
	   		select		YEAR(um.date_added) as year,
						count(*) as numMovies,
						sum(m.duration) as totMinutes

		from			user_to_movie um inner join movie m
						on um.movie = m.movie
		
		where			um.username = #username#
		
		group by		YEAR(um.date_added)
		
		order by		um.date_added desc
   </select>
  
</sqlMap>